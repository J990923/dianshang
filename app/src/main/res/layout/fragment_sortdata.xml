<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dp_10"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<ImageView
    android:id="@+id/image"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_width="match_parent"
    android:scaleType="fitXY"
    android:layout_height="@dimen/dp_100"/>
    <TextView
        android:id="@+id/tv_name"
        app:layout_constraintTop_toTopOf="@id/image"
        app:layout_constraintBottom_toBottomOf="@id/image"
        app:layout_constraintLeft_toLeftOf="@id/image"
        app:layout_constraintRight_toRightOf="@id/image"
        android:textSize="@dimen/dp_16"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:background="#DEDADA"
        app:layout_constraintRight_toLeftOf="@id/tv_heat_name"
        app:layout_constraintTop_toTopOf="@id/tv_heat_name"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_width="@dimen/dp_50"
        app:layout_constraintBottom_toBottomOf="@id/tv_heat_name"
        android:layout_height="@dimen/dp_1"/>
    <View
        android:background="#DEDADA"
        app:layout_constraintBottom_toBottomOf="@id/tv_heat_name"
        app:layout_constraintLeft_toRightOf="@id/tv_heat_name"
        app:layout_constraintTop_toTopOf="@id/tv_heat_name"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_1"/>
    <TextView
        android:layout_marginTop="@dimen/dp_20"
        android:textSize="@dimen/dp_14"
        android:id="@+id/tv_heat_name"
        app:layout_constraintTop_toBottomOf="@id/image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyler"
        android:layout_marginTop="@dimen/dp_20"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_heat_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"/>
</androidx.constraintlayout.widget.ConstraintLayout>