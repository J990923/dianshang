<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:hint="商品搜索共129件好物"
               android:drawableLeft="@drawable/icon_search"
                android:layout_marginHorizontal="@dimen/dp_18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.youth.banner.Banner
                android:id="@+id/banner"
                app:image_scale_type="center_crop"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_150"/>
            <LinearLayout
                android:layout_marginTop="@dimen/dp_10"
                android:id="@+id/layout_tab"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_5"
                android:background="#E3E3E3"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:textSize="@dimen/dp_18"
                    android:id="@+id/txt_brand_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="品牌制作商直供"
                    android:gravity="center"
                    android:paddingVertical="@dimen/dp_10"></TextView>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recy_brand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_5"
                android:background="#E3E3E3"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:textSize="@dimen/dp_18"
                    android:id="@+id/txt_newgood_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="周一周四·新品首发"
                    android:gravity="center"
                    android:paddingVertical="@dimen/dp_10"></TextView>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recy_newgood"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_5"
                android:background="#E3E3E3"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:paddingVertical="@dimen/dp_10"
                    android:text="人气推荐"
                    android:gravity="center"
                    android:textSize="@dimen/dp_18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recy_hotGoods"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_5"
                android:background="#E3E3E3"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_special"
                    android:paddingVertical="@dimen/dp_10"
                    android:text="专题精选"
                    android:gravity="center"
                    android:textSize="@dimen/dp_18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recy_topic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_5"
                android:background="#E3E3E3"></View>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/jujia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>